/* pages/order/order.wxss */
@import "../common/lib/weui.wxss";

page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
    padding-top: 60px;
    text-align: center;
}

.item{
   display: flex;
   flex-direction: row;
   background: white;
   width: 100%;
   height: 200rpx;
   padding: 20rpx;
   margin-top: 4rpx;
}

.item_head{
    width: 200rpx;
    height: 200rpx;
    border-radius:10rpx;
}


.item_info
{
    width: 360rpx;
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
}

.item_sign
{
    align-self: flex-start;
    font-size: 26rpx;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    white-space: normal;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
}

.txt_size
{
    font-size: 26rpx;
}

.item_price
{
    color: red;
    font-size: 30rpx;
    margin-top: 50rpx;
    margin-right: 20rpx;
}